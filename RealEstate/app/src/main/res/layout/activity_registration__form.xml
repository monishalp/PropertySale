<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration__form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/regform2"
    tools:context="com.example.monisha.propertymarketing.AuthenticationForms.Registration_Form">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:id="@+id/register"
        android:background="@android:color/transparent"
        android:elevation="1dp"
        android:layout_below="@+id/address2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:id="@+id/bGoBack" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/password"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/username"
            android:layout_alignStart="@+id/username" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/address2"
            android:background="@android:color/transparent"
            android:hint="address 2"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/address1"
            android:layout_alignStart="@+id/address1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|phone"
            android:text=""
            android:ems="10"
            android:id="@+id/mobile"
            android:background="@android:color/transparent"
            android:hint="Phone"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/email"
            android:layout_alignStart="@+id/email" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_type"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/address2"
            android:layout_alignStart="@+id/address2"
            android:layout_alignEnd="@+id/register" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/username"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="19dp"
            android:background="@android:color/transparent"
            android:hint="Username"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/email"
            android:layout_marginTop="24dp"
            android:background="@android:color/transparent"
            android:hint="Email"
            android:layout_below="@+id/password"
            android:layout_alignStart="@+id/password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/address1"
            android:background="@android:color/transparent"
            android:hint="address 1"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/dob"
            android:layout_alignStart="@+id/dob" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/dob"
        android:hint="Date of Birth"
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
            android:layout_below="@+id/mobile"
            android:layout_alignStart="@+id/mobile" />
    </RelativeLayout>

</RelativeLayout>
