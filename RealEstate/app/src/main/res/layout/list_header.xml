<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Property:"
            android:textColor="#DC0000"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:id="@+id/current_intro"/>

        <ImageView
            android:id="@+id/current_icon"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:contentDescription="Image"
            android:layout_below="@+id/current_intro"
            android:background="@drawable/love"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/current_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/current_icon"
            android:paddingBottom="10dp"
            android:textColor="#3399FF"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:text="Name:"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/current_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:text="love place"
            android:layout_above="@+id/current_size"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/current_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/current_name_value"
            android:paddingBottom="10dp"
            android:textColor="#3399FF"
            android:textSize="15dp"
            android:paddingLeft="40dp"
            android:text="Type:"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/current_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="house"
            android:paddingLeft="10dp"
            android:layout_alignTop="@+id/current_type"
            android:layout_toEndOf="@+id/current_type" />

        <TextView
            android:id="@+id/current_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_name"
            android:layout_toRightOf="@+id/current_icon"
            android:paddingLeft="15dp"
            android:textColor="#3399FF"
            android:textSize="15dp"
            android:text="Size:"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/current_size_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:text="1500"
            android:layout_alignTop="@+id/current_cost"
            android:layout_toStartOf="@+id/current_type" />

        <TextView
            android:id="@+id/current_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="#3399FF"
            android:textSize="15dp"
            android:paddingLeft="55dp"
            android:text="Cost:"
            android:layout_alignTop="@+id/current_cost_value"
            android:layout_toStartOf="@+id/current_type_value" />

        <TextView
            android:id="@+id/current_cost_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/current_cost"
            android:layout_below="@+id/current_type"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="1200"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#DC0000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</LinearLayout>