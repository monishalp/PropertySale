<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dada.realestatemanager.activity.SplashActivity">

    <!--Link to github page-->
    <!--https://github.com/flavioarfaria/KenBurnsView-->
    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splashscreen_background"
        />

    <com.romainpiel.shimmer.ShimmerTextView
        android:layout_centerHorizontal="true"
        android:textStyle="italic|bold"
        android:fontFamily="casual"
        android:id="@+id/splash_shimmertextview_title"
        android:text="@string/living_harmony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="#ffffff"
        android:textSize="50sp"
        app:reflectionColor="#444"/>

    <com.romainpiel.shimmer.ShimmerTextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/real_estate_management"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:layout_marginTop="170sp"
        android:textColor="#ffffff"
        app:reflectionColor="#444"
        android:id="@+id/splash_shimmertextview_subtitle"
        />

    <com.romainpiel.shimmer.ShimmerButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/splash_enter_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Begin"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        app:reflectionColor="#444"
        android:id="@+id/splash_shimmerbutton_begin"
        />



</RelativeLayout>
